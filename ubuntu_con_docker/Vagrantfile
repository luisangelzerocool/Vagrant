#MAQUINAS

  Vagrant.configure(2) do |config|
    #config.hostmanager.enabled = true
  
    config.vm.box = "ubuntu/bionic64"
  
    config.vm.define "ubuntu", primary: true do |h|
      h.vm.hostname = "ubuntu"
      h.vm.network "private_network", ip: "192.168.1.101"
      # dar instrucciones de instalaci칩n de docker desde shell
      h.vm.provision :shell, path: "docker_install_script.sh"
      h.vm.provider "virtualbox" do |vb|
        vb.memory = "4096"
      end
    end
  end
  
